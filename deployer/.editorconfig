# =============================================================================
# EditorConfig for Cookie CRUD Project
# =============================================================================
# This file enforces tab-only indentation and consistent formatting
# across all editors and IDEs that support EditorConfig.
# =============================================================================

root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Erlang files - TABS ONLY, NO SPACES
[*.{erl,hrl,escript,app.src}]
indent_style = tab
indent_size = 4
tab_width = 4
max_line_length = 80

# Configuration files - tabs for consistency
[*.{config,args}]
indent_style = tab
indent_size = 4
tab_width = 4

# Shell scripts - tabs
[*.{sh,bash}]
indent_style = tab
indent_size = 4
tab_width = 4

# Makefiles - must use tabs
[{Makefile,*.mk}]
indent_style = tab
indent_size = 4
tab_width = 4

# Documentation - spaces (for better readability)
[*.{md,txt,rst}]
indent_style = space
indent_size = 2
max_line_length = 80

# YAML/JSON - spaces (convention)
[*.{yml,yaml,json}]
indent_style = space
indent_size = 2

# Docker files - spaces
[{Dockerfile*,*.dockerfile}]
indent_style = space
indent_size = 2
